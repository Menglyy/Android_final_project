<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/back2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_view_background"
            android:padding="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:layout_marginTop="25dp"
            android:text="Tomatoes"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />


    </RelativeLayout>

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tomato" />

    <!-- Product Title -->
    <TextView
        android:id="@+id/product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Tomatoes"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Product Description -->
    <TextView
        android:id="@+id/product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_title"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Tomatoes are a colorful, nutritious fruit (though used like a vegetable) that come in many varieties. They are a versatile ingredient, enjoyed raw, cooked, or juiced in countless dishes. Easy to use and store, tomatoes are a great addition to any kitchen."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Price -->
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:text="$1.83/Kg"
        android:textColor="#00AF87"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:text="Quantity: 450"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_quantity"
        android:text="Available in stock"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="#00AF87"
        android:textSize="18sp" />

    <!-- Seller Details -->


    <LinearLayout
        android:id="@+id/seller_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/available"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seller_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phnom Penh, Makro"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:backgroundTint="#00AF87"
            android:padding="10dp"
            android:text="Contact"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:backgroundTint="#00AF87"
        android:text="Add to Cart"
        android:textSize="18sp" />
</RelativeLayout>